    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_var3"
        android:text="var3이 출력됩니다."
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_var4"
        android:text="var4이 출력됩니다."
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_var5"
        android:text="var5이 출력됩니다."
        android:textSize="24sp"/>



</LinearLayout>